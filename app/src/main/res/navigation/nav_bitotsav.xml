<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_bitotsav"
    app:startDestination="@id/destSchedule">

    <fragment
        android:id="@+id/destInfo"
        android:name="in.bitotsav.info.ui.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" />

    <fragment
        android:id="@+id/destSchedule"
        android:name="in.bitotsav.events.ui.ScheduleFragment"
        android:label="fragment_schedule"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/destFeed"
        android:name="in.bitotsav.feed.ui.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" />

    <fragment
        android:id="@+id/destProfile"
        android:name="in.bitotsav.profile.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_destProfile_to_destLogin"
            app:destination="@+id/destLogin"
            app:popUpTo="@+id/destSchedule" />

    </fragment>

    <fragment
        android:id="@+id/destLogin"
        android:name="in.bitotsav.profile.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_destLogin_to_destRegistrationStepOne"
            app:destination="@id/destRegistrationStepOne"
            app:popUpTo="@+id/destLogin" />

        <action
            android:id="@+id/action_destLogin_to_destProfile"
            app:destination="@id/destProfile"
            app:popUpTo="@+id/destSchedule" />

    </fragment>

    <fragment
        android:id="@+id/destRegistrationStepOne"
        android:name="in.bitotsav.profile.ui.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration_step_one" >
        <argument
            android:name="registrationStepNumber"
            app:argType="integer"
            android:defaultValue="1" />
        <action
            android:id="@+id/next_step"
            app:destination="@id/destRegistrationStepTwo"
            app:popUpTo="@+id/destLogin" />
    </fragment>

    <fragment
        android:id="@+id/destRegistrationStepTwo"
        android:name="in.bitotsav.profile.ui.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration_step_two" >
        <argument
            android:name="registrationStepNumber"
            app:argType="integer"
            android:defaultValue="2" />
        <action
            android:id="@+id/next_step"
            app:destination="@id/destRegistrationStepThree"
            app:popUpTo="@+id/destLogin" />
    </fragment>

    <fragment
        android:id="@+id/destRegistrationStepThree"
        android:name="in.bitotsav.profile.ui.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration_step_three" >
        <argument
            android:name="registrationStepNumber"
            app:argType="integer"
            android:defaultValue="3" />
        <!-- TODO: Ensure that this doesn't cause double destProfile in pop stack -->
        <action
            android:id="@+id/next_step"
            app:destination="@id/destProfile"
            app:popUpTo="@+id/destProfile" />
    </fragment>

</navigation>