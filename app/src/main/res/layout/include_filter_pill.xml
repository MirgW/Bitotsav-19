<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="color"
            type="int" />

        <variable
            name="selected"
            type="boolean" />

        <variable
            name="label"
            type="String" />

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@{selected ? @drawable/round_corners: @drawable/round_corners_border}"
        android:backgroundTint="@{color}"
        android:orientation="horizontal"
        android:paddingEnd="12dp"
        android:onClickListener="@{listener}"
        tools:backgroundTint="@color/colorRed">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:rotation="@{selected ? 45: 0}"
            android:src="@drawable/ic_add_circle_white_16dp"
            android:tint="@{selected ? @color/colorWhite: color}" />

        <TextView
            style="@style/TextAppearance.Bitotsav.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@{label}"
            android:textColor="@{selected ? @color/colorWhite: @color/textColor}"
            tools:text="Category Name"
            tools:textColor="@color/colorWhite" />

    </LinearLayout>

</layout>